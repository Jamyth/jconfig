{
  "name": "jconfig",
  "description": "Prettier & Eslint configuration",
  "author": "Jamyth",
  "devDependencies": {
    "@commitlint/cli": "12.0.1",
    "@commitlint/config-conventional": "12.0.1",
    "@rollup/plugin-commonjs": "18.0.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@rollup/plugin-replace": "2.4.2",
    "@rollup/plugin-typescript": "8.2.1",
    "@types/eslint": "7.2.7",
    "@types/eslint-config-prettier": "6.11.0",
    "@types/node": "14.14.36",
    "@types/prettier": "2.2.3",
    "@typescript-eslint/eslint-plugin": "4.19.0",
    "@typescript-eslint/parser": "4.19.0",
    "chalk": "4.1.0",
    "confusing-browser-globals": "1.0.10",
    "eslint": "7.22.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-react": "7.23.1",
    "eslint-plugin-react-hooks": "4.2.0",
    "eslint-plugin-sonarjs": "0.6.0",
    "husky": "5.2.0",
    "lint-staged": "10.5.4",
    "prettier": "2.2.1",
    "rollup": "2.43.1",
    "rollup-plugin-terser": "7.0.2",
    "ts-node": "9.1.1",
    "typescript": "4.2.3"
  },
  "scripts": {
    "build:eslint": "rollup --config tools/eslint-config-iamyth/rollup.config.js",
    "format:eslint": "prettier --write packages/eslint-config-iamyth",
    "lint:eslint": "eslint --ext .js,.ts packages/eslint-config-iamyth"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint --env HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,json,ts}": "prettier --write"
  },
  "commitlint": {
    "extends": "@commitlint/config-conventional"
  }
}
