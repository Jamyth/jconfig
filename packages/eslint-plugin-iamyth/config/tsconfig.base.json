{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "importsNotUsedAsValues": "error",
        "skipLibCheck": true,

        "moduleResolution": "node"
    }
}
