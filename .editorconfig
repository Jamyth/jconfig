# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,json,ts}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.md]
max_line_length = off
trim_trailing_whitespace = false